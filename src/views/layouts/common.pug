html 
  head 
    title NodeJS - Project 01
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css", 
    rel="stylesheet",
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6",
    crossorigin="anonymous")
    link(href="/assets/base.css" rel="stylesheet")
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
  body 
    block header 
      nav(class="navbar navbar-expand-lg navbar-dark bg-dark") 
        div(class="container-fluid") 
          div(class="d-flex align-items-center justify-content-between w-100")
            div(class="navbar-right d-flex") 
              a(class="navbar-brand" href="/") VANS-Việt Anh
              form(class="d-flex m-0" action="/products/search" method="GET") 
                input(
                  class="form-control me-2" 
                  type="search"
                  placeholder="Bạn muốn tìm gì ?" 
                  aria-label="Search"
                  name="keyword"
                  value=q
                  ) 
                button(class="btn btn-outline-success") Search
            .d-flex.justify-content-between.align-items-center
              a(href='/cart')
                i.fas.fa-shopping-cart
                span.badge.bg-danger.rounded-circle 4
              if user 
                a(style='color: white' class='my-0 mx-3' href='#')= user.name
              else  
                div(class='navbar-auth d-flex align-items-center p-2')
                  a(class='navbar-auth-login' href='/login') Đăng nhập 
                  a(class='navbar-auth-register' href='/register') Đăng ký
    .container.pt-4
      block content
    block footer
      div(style='height: 100px')
