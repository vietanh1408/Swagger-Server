              a(class="navbar-brand" href="/") VANS-Việt Anh
              form(class="d-flex m-0" action="/products/search" method="GET") 
                input(
                  class="form-control me-2" 
                  type="search"
                  placeholder="Bạn muốn tìm gì ?" 
                  aria-label="Search"
                  name="keyword"
                  value=q
                  ) 
                button(class="btn btn-outline-success") Search

            div(class='navbar-auth d-flex align-items-center p-2')
              a(class='navbar-auth-login' href='/login') Login 
              a(class='navbar-auth-register' href='/register') Register
