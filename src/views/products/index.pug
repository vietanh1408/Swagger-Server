extends ../layouts/common.pug
block content
    h1 Danh sách sản phẩm
    ul(class='product-list') 
        div(class='row')
            each product in products   
                    div(class='col-xl-3 col-lg-3 col-md-4 col-sm-6 col-12')
                        li(class='product-item card')
                            div(class='product-item-image')
                                img(src=product.poster[0].url alt= product.name)
                            div(class='product-item-content p-3')
                                a(href='/products/' + product.name)= product.name
                                span(class='product-item-price')= product.price + ' VNĐ'
    p= error
    .d-flex.justify-content-center 
        nav(aria-label='Page navigation example')
            ul.pagination
                
                li.page-item
                    a.page-link(href='/products/?page=' + (page-1) , aria-label='Previous')
                        span(aria-hidden='true') &laquo;
                each index in length 
                    li.page-item
                        a.page-link(href='/products/?page='+ index)= index
                li.page-item
                    a.page-link(href='/products/?page=' + page+1 , aria-label='Next')
                        span(aria-hidden='true') &raquo;
                
    
